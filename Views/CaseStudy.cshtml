@using ContentModels = Umbraco.Web.PublishedModels;
@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.CaseStudy>

@{
	Layout = "master.cshtml";
	
	var listRelatedArticles =  Umbraco.Content(Guid.Parse("d0fdc23a-b575-4e8b-8af4-634635c644dd"))
    .Children().Take(3)
    .Where(x => x.IsVisible());
    
     var newsImage = "";
     
     
     if ( Model.Value<IPublishedContent>("newsImage") != null)
     {
            newsImage = Model.Value<IPublishedContent>("newsImage").Url;
                                    
     }


}

<div class="case-study-wrap">

<div class="top-banner case-study-page" style="background-image: url('@newsImage')"></div>
			<div class="container">
				<h2 class="page-title">@Model.Value("newsTitle")
				</h2>	
			</div>
			<section class="content-section case-study-section background-section">
				<div class="container case-study-content-wrapper">
				    <div class="row">
				        <div id="caseStudySummary" class="col-md-12 col-sm-12 col-12">
				                @Model.Value("newsSummary")
				        </div>
						<div class="col-md-6 col-sm-6 col-12">
							<div class="section-content">
							    @Model.Value("newsLeftContent")
							</div>
						</div>
						<div class="col-md-6 col-sm-6 col-12">
						        @Model.Value("newsContent")
						</div>
					</div>
					
					
					
				    
				</div>
			</section>
	</div>
	

