@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    Layout = "IPExMaster.cshtml";
    ViewBag.Title = "Terms";
}



<div class="container-desktop">
    <div class="container-custom content-terms">
        <div class="d-flex flex-column align-items-center w-100">
            <header class="sticky-top w-100">
                <div class="m-auto">
                    <div class="d-flex align-items-end position-relative logo">
                        <div class="">
                            <img width="50" src="~/Assets/IPEx/images/logo.svg">
                        </div>
                        <div class="nametag terms">
                            <div class="tag">@Model.Value("IPEx_termHeaderTitle")</div>
                            <div class="name">@Model.Value("IPEx_termHeaderSubTitle")</div>
                        </div>
                        <div class="progress position-absolute w-100">
                            <div class="progress-bar progress-bar-custom" role="progressbar" style="width: 0%;"
                                 aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </header>
            <wrapper class="overflow-auto">
                <div class="h-100">
                    <div class="content h-100 overflow-auto">
                        @Model.Value("IPEx_termContent")
                    </div>
                </div>
            </wrapper>
            <div class="footer-terms position-fixed">
                <div class="gradient"></div>
                <div class="d-flex footer">
                    <a href="@Model.Value("IPEx_btnDeclineLink")"><button class="btn btn-custom btn-custom-outline">@Model.Value("IPEx_BtnDeclineTitle")</button></a>
                    <a href="@Model.Value("buttonAcceptLink")"><button class="btn btn-custom btn-Allports">@Model.Value("buttonAcceptTitle")</button></a>
                </div>
            </div>
        </div>
    </div>
</div>
