@inherits Umbraco.Web.Mvc.UmbracoViewPage
 @{
    
       var itemImage = "";
         if (Model.HasValue("newsImage"))
         {
         itemImage = Model.Value<IPublishedContent>
             ("newsImage").Url;

             }
   
    }
             <!-- A Item  -->
             <div class="col-md-6 item" style="background-image: url('@itemImage');">

                 <div class="item-content">
                     <div class="title">@Model.Value("newsTitle")</div>
                     <div class="description">
                         @Model.Value("newsSummary")
                     </div>
                     	<a href="@Model.Url" class="readmore">READ FRED & WILMA’S STORY <i class="fas fa-chevron-right arrow arrow-1"></i><i class="fas fa-chevron-right arrow arrow-2"></i><i class="fas fa-chevron-right arrow arrow-3"></i></a>
                 </div>
             </div>
             <!-- End Item -->
             
            

